<UserControl x:Class="SchoolApplication.Views.UserControls.TeacherUC.HomeTeacherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:SchoolApplication.Views.UserControls.TeacherUC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:lvc="clr-namespace:LiveCharts;assembly=LiveCharts"
             xmlns:vm="clr-namespace:SchoolApplication.ViewModels"
             xmlns:charts="clr-namespace:SchoolApplication.Views.UserControls.TeacherUC"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1090"
             Background="Transparent">

    <UserControl.DataContext>
        <vm:HomeTeacherVm/>
    </UserControl.DataContext>

    <materialDesign:Card Margin="20" 
                         Background="White" 
                         UniformCornerRadius="15"
                         BorderThickness="0">
        <StackPanel Margin="30 12 30 0">
            <DockPanel Margin="0 12 5 0">
                <TextBlock Text="Добро пожаловать!"
                   HorizontalAlignment="Left"
                   FontSize="45"
                   FontWeight="Bold"/>
            </DockPanel>
            <materialDesign:ColorZone Mode="Custom"
                                  Background="MistyRose"
                                  Foreground="LightSalmon"
                                  CornerRadius="15"
                                  Padding="40 15"
                                  Margin="0 35 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Рады вас видеть + Username!"
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="0 15 0 0"/>
                        <TextBlock Text="Настоящие герои не носят плащи, они учат и вдохновляют"
                               FontSize="15"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"
                               Foreground="SlateGray"
                               VerticalAlignment="Center"
                               Margin="0 5 0 0"/>
                        <TextBlock Text="Пусть достижения ваших учеников превзойдут все ваши ожидания!"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Foreground="SlateGray"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="0 5 0 0"/>
                    </StackPanel>
                    <Image Source="/Images/HomeSt.png"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       Height="200"
                       Width="290"
                       Margin="0 -85 0 -1"
                       />
                </Grid>
            </materialDesign:ColorZone>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <materialDesign:ColorZone Grid.Column="1"
                                      Mode="Custom"
                                      Background="White"
                                      Foreground="Black"
                                      CornerRadius="15"
                                      Padding="20"
                                      Height="300">
                    <StackPanel>
                        <DockPanel VerticalAlignment="Center">
                            <TextBlock Text="Ближайшие занятия"
                               FontWeight="Bold"
                               FontSize="15"/>
                            <TextBlock Text="Смотреть"
                               VerticalAlignment="Center"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="272 0 10 0"/>
                            <materialDesign:PackIcon Kind="ArrowRight" 
                                                 DockPanel.Dock="Right" 
                                                 VerticalAlignment="Center"/>
                        </DockPanel>

                        <DockPanel Margin="0 30 0 0">
                            <TextBlock Foreground="Gray"
                               FontSize="12"
                               FontWeight="SemiBold">
                        <Bold Foreground="Black">Занятие 1</Bold>
                            - 3d дизайн
                            </TextBlock>

                            <TextBlock Text="Группа 1-М"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="70 0 0 0"
                                   HorizontalAlignment="Center"
                                   />

                            <TextBlock Text="305"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Margin="10 0 0 0"
                               HorizontalAlignment="Right"/>

                        </DockPanel>

                        <Separator Background="WhiteSmoke"
                           Margin="0 15 0 0"/>

                        <DockPanel Margin="0 30 0 0">

                            <TextBlock Foreground="Gray"
                                   FontSize="12"
                                   FontWeight="SemiBold">
                               <Bold Foreground="Black">Занятие 2</Bold>
                                - Веб дизайн
                            </TextBlock>


                            <TextBlock Text="Группа 3-В"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="70 0 0 0"
                                   HorizontalAlignment="Center"
                                   />

                            <TextBlock Text="303"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="10 0 0 0"
                                   HorizontalAlignment="Right"/>

                        </DockPanel>

                        <Separator Background="WhiteSmoke"
                               Margin="0 15 0 0"/>

                        <DockPanel Margin="0 30 0 0">

                            <TextBlock Foreground="Gray"
                                   FontSize="12"
                                   FontWeight="SemiBold">
                               <Bold Foreground="Black">Занятие 3</Bold>
                                    - Основы IT
                            </TextBlock>

                            <TextBlock Text="Группа 2-А"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="70 0 0 0"
                                   HorizontalAlignment="Center"
                                   />

                            <TextBlock Text="308"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="10 0 0 0"
                                   HorizontalAlignment="Right"/>
                        </DockPanel>

                        <Separator Background="WhiteSmoke"
                               Margin="0 15 0 0"/>

                        <DockPanel Margin="0 30 0 0">

                            <TextBlock Foreground="Gray"
                                   FontSize="12"
                                   FontWeight="SemiBold"> 
                            
                       <Bold Foreground="Black">Занятие 4</Bold>
                            - Робототехника
                            </TextBlock>

                            <TextBlock Text="Соловьев А.Ю."
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="70 0 0 0"
                                   HorizontalAlignment="Center"
                                   />
                            <TextBlock Text="304"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="10 0 0 0"
                                   HorizontalAlignment="Right"/>
                        </DockPanel>
                        <Separator Background="WhiteSmoke"
                               Margin="0 15 0 0"/>

                    </StackPanel>
                </materialDesign:ColorZone>

                <materialDesign:ColorZone Grid.Column="0"
                                      Mode="Custom"
                                      Background="White"
                                      Foreground="Black"
                                      CornerRadius="15"
                                      Padding="20"
                                      Height="300">
                    <StackPanel>
                        <TextBlock Text="Количество студентов"
                               FontSize="15"
                               FontWeight="Bold"/>
                        <charts:LiveChartTeacherUsers Height="240"/>
                    </StackPanel>
                </materialDesign:ColorZone>

                <materialDesign:ColorZone 
                      Mode="Custom"
                      Background="Gainsboro"
                      Foreground="Firebrick"
                      CornerRadius="15"
                      Padding="40 15"
                      Margin="0,308,0,0" 
                      Grid.ColumnSpan="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="460"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Не забывайте вносить коррективы в расписание!"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Ученики с нетерпением ждут информацию о следующей паре"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left"
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   Margin="0 5 0 0"/>
                            <TextBlock Text="Следите за кабинетами, они часто бывают заняты :))"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="Black"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="0 5 0 0"/>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>

            </Grid>
        </StackPanel>

    </materialDesign:Card>

</UserControl>
