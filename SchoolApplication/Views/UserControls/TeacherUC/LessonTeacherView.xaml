<UserControl x:Class="SchoolApplication.Views.UserControls.TeacherUC.LessonTeacherView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
              xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
              xmlns:vm="clr-namespace:SchoolApplication.ViewModels" 
              xmlns:sys="clr-namespace:System;assembly=netstandard"
              mc:Ignorable="d" 
              d:DesignHeight="800" 
              d:DesignWidth="1090"
              Background="Transparent">

    <UserControl.DataContext>
        <vm:LessonTeacherVm/>
    </UserControl.DataContext>

    <Grid>

        <materialDesign:Card Margin="20" 
                         Background="White"
                         UniformCornerRadius="15">

            <Grid>
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="Занятия"
                                   FontWeight="Bold"
                                   Margin="20 30"
                                   FontSize="40"/>
                    </DockPanel>
                    <ui:DataGrid ItemsSource="{Binding LessonTeacherVm.ProductsCollection, Mode=TwoWay}"
                                 Height="370"
                                 Width="998"
                                 BorderThickness="1"/>
                        <TextBlock Text="Создать занятие"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="26 20 26 0"/>
                    <WrapPanel Width="998"
                               Margin="20"
                               HorizontalAlignment="Center">
                        
                        <StackPanel>
                            
                            <TextBlock Text="ID"
                                       FontSize="18"/>
                            <ComboBox ItemsSource="{Binding FontFamilies}" Width="180"
                                      Height="36"/>
                            
                        </StackPanel>
                        
                        <StackPanel Margin="10 0 0 0">
                            <TextBlock Text="Название"
                                       FontSize="18"/>

                            <ui:TextBox PlaceholderText="Type something..." BorderThickness="1" Width="180"/>
                        </StackPanel>
                        <StackPanel Margin="10 0 0 0">

                            <TextBlock Text="Группа"
                                       FontSize="18"/>
                            <ui:TextBox PlaceholderText="Type something..." BorderThickness="1" Width="180"/>
                        </StackPanel>
                        <StackPanel Margin="10 0 0 0">
                            <TextBlock Text="Дата"
                                       FontSize="18"/>
                            <ui:CalendarDatePicker Date="{x:Static sys:DateTime.Today}" IsTodayHighlighted="True" 
                                                   Height="35.64"
                                                   Content="Выберите дату"
                                                   Width="180"/>
                        </StackPanel>
                        <StackPanel Margin="10 0 0 0">
                            <TextBlock Text="Время"
               FontSize="18"/>
                            <ui:TimePicker ClockIdentifier="Clock24Hour" Width="180"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>

</UserControl>
