<UserControl x:Class="SchoolApplication.Views.UserControls.AdminUC.UsersAdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolApplication.Views.UserControls.AdminUC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:SchoolApplication.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="1090"
             Background="Transparent">

    <UserControl.DataContext>
        <vm:UsersAdminVm/>
    </UserControl.DataContext>
    
    <Grid>

        <materialDesign:Card Margin="20" 
          Background="White"
          UniformCornerRadius="15">

            <Grid>

                <StackPanel>

                    <DockPanel>

                        <TextBlock Text="Пользователи"
                    FontWeight="Bold"
                    Margin="20 30"
                    FontSize="40"/>

                    </DockPanel>

                    <ui:DataGrid ItemsSource="{Binding DiaryAdminVm.DiaryCollection, Mode=TwoWay}"
                  Height="318"
                  Width="998"
                  BorderThickness="1"/>

                    <TextBlock Text="Создать пользователя"
                    FontSize="22"
                    FontWeight="Bold"
                    Margin="60.75 20 26 10"/>

                    <UniformGrid Width="998"
                               Margin="20 0 20 0">

                        <StackPanel>

                            <TextBlock Text="Имя"
                                       Width="180"
                                       FontSize="18"/>

                            <ui:TextBox Width="180"
                       Height="36"/>

                        </StackPanel>

                        <StackPanel>

                            <TextBlock Text="Фамилия"
                                       Width="180"
                                       FontSize="18"/>

                            <ui:TextBox Width="180"
                                        Height="36"/>

                        </StackPanel>

                        <StackPanel>

                            <TextBlock Text="Отчетсво"
                                       Width="180"
                        FontSize="18"/>

                            <ui:TextBox Width="180"
                                        Height="36"/>

                        </StackPanel>



                        <StackPanel>

                            <TextBlock Text="Дата рождения"
                                       Width="180"
                                       FontSize="18"/>

                            <DatePicker Width="180"
                                        Height="36"/>

                        </StackPanel>

                        <StackPanel Margin="0 5 0 0">

                            <TextBlock Text="Телефон"
                                       Width="180"
                                       FontSize="18"/>

                            <ui:TextBox Width="180"
                                        Height="36"/>

                        </StackPanel>

                        <StackPanel Margin="0 5 0 0">

                            <TextBlock Text="Роль"
                                       Width="180"
                                       FontSize="18"/>

                            <ComboBox Width="180"
                       Height="36">
                                <ComboBoxItem>Ученик</ComboBoxItem>
                                <ComboBoxItem>Преподаватель</ComboBoxItem>
                            </ComboBox>

                        </StackPanel>

                        <StackPanel Margin="0 5 0 0">

                            <TextBlock Text="Группа"
                                       Width="180"
                                       FontSize="18"/>

                            <ComboBox Width="180"
                                      Height="36">
                                <ComboBoxItem>1</ComboBoxItem>
                                <ComboBoxItem>2</ComboBoxItem>
                            </ComboBox>

                        </StackPanel>

                        <StackPanel Margin="0 5 0 0">

                            <TextBlock Text="Логин"
                                       Width="180"
                                       FontSize="18"/>

                            <ui:TextBox Width="180"
                                        Height="36"/>

                        </StackPanel>

                        <StackPanel Margin="0 6 0 0">

                            <TextBlock Text="Пароль"
                                       Width="180"
                                       FontSize="18"/>

                            <ui:PasswordBox Width="180"
                                        Height="36"/>

                        </StackPanel>

                        <StackPanel Margin="0 6 0 0">

                            <TextBlock Text="Действие"
                                       Width="180"
                                       FontSize="18"/>

                            <ComboBox Width="180"
                                      Height="36">
                                <ComboBoxItem>Добавить</ComboBoxItem>
                                <ComboBoxItem>Обновить</ComboBoxItem>
                                <ComboBoxItem>Удалить</ComboBoxItem>
                            </ComboBox>

                        </StackPanel>

                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom">

                            <Button Width="180"
                     Height="36"
                     Content="Выполнить"
                     />

                        </StackPanel>
                    </UniformGrid>

                </StackPanel>

            </Grid>

        </materialDesign:Card>

    </Grid>
</UserControl>
