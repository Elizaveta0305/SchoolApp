<UserControl x:Class="SchoolApplication.Views.UserControls.StudentUC.Grade"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolApplication.Views.UserControls.StudentUC"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:SchoolApplication.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1090"
             Background="Transparent">
    <UserControl.DataContext>
        <vm:GradeVm/>
    </UserControl.DataContext>
    <Grid>
        <materialDesign:Card Margin="20" 
                             Background="White"
                             UniformCornerRadius="15">
            <StackPanel>
                
            <DockPanel>
                <TextBlock Text="Оценки и успеваемость"
                           FontWeight="Bold"
                           Margin="20 40"
                           FontSize="40"/>
            </DockPanel>
                <materialDesign:ColorZone Mode="Custom"
                                          Background="MistyRose"
                                          Foreground="LightSalmon"
                                          CornerRadius="15"
                                          Padding="40 15"
                                          Width="998"
                                          HorizontalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="UserName"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="0 15 0 0"/>
                            <TextBlock Text="Groups"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Left"
                                       Foreground="SlateGray"
                                       VerticalAlignment="Center"
                                       Margin="0 5 0 0"/>
                            <TextBlock Text="Subjects"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="SlateGray"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="0 5 0 0"/>
                        </StackPanel>
                        <Image Source="/Images/StudentGradeImg.png"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               Height="200"
                               Width="290"
                               Margin="0 -85 0 -1"
               />
                    </Grid>

                </materialDesign:ColorZone>

                <DataGrid d:ItemsSource="{d:SampleData ItemCount=10}" 
          Height="400"
          Width="998"
          BorderThickness="2"
          VerticalAlignment="Center"
          Margin="0 20 0 0"
          />

            </StackPanel>
            
            
            
        </materialDesign:Card>

        <Grid/>
    </Grid>
</UserControl>
